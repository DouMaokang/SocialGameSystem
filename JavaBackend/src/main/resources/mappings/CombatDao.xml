<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="softwareGenius.mapper.CombatDao">
    <resultMap id="combatMap" type="softwareGenius.model.Combat">
        <result property="combatId" column="combatId"/>
        <result property="difficultyLevel" column="difficultyLevel"/>
        <result property="mode" column="mode"/>
        <result property="playerId" column="playerId"/>
        <result property="npcId" column="npcId"/>
        <result property="combatTime" column="combatTime"/>
        <result property="status" column="status"/>
    </resultMap>

    <insert id="addCombat" parameterType="softwareGenius.model.DemoModel">
        insert into user (
             username,
             sex,
             age
              )
        VALUES (
            #{username},
            #{sex},
            #{age}
          )
    </insert>
    <update id="update" parameterType="softwareGenius.model.DemoModel">
        update user
        set username=#{username},
            sex=#{sex},
            age = #{age}
        where id=#{id}
    </update>

    <delete id="delete">
        DELETE FROM user
        WHERE id = #{id}
    </delete>

    <select id="select" parameterType="java.lang.Integer" resultMap="userMap">
        select id, username, sex, age
        from user
        where id = #{id}
    </select>

    <select id="selectAll" resultMap="userMap">
        select id,username,sex,age
        from user
    </select>
</mapper>